{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": [
      "git pull",
      "yarn lint",
      "yarn test"
    ],
    "after:bump": "npx auto-changelog -p"
  }
}