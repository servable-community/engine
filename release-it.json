{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [
      "git pull",
      "yarn lint",
      "yarn test"
    ],
    "after:bump": "npx auto-changelog -p"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org" //https://github.com/release-it/release-it/blob/main/docs/npm.md
  }
}